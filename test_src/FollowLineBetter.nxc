task main(){
int Kp = 100;
int Ki = 0;
int Kd = 0;
int offset = 30;
int Tp = 25;
int integral = 0;
int lastError = 0;
int derivative = 0;
int near = 20;
SetSensorType(S1, SENSOR_TYPE_LIGHT_ACTIVE);
SetSensorMode(S1, SENSOR_MODE_PERCENT);
SetSensorLowspeed(S4);
while(true){
    if(SensorUS(S4) < near){
        if (Sensor(S1) < offset){
            OnFwd(OUT_AC,50);
            Wait(1000);
            OnFwd(OUT_A,60);
            OnRev(OUT_C,30);
            Wait(1500);
        }
        else{
            Off(OUT_AC);
        }
    }
    int LightValue = SensorValue(S1);
    int error = LightValue - offset;
    integral = (2/3) * integral + error;
    derivative = error - lastError;
    int Turn = ((Kp * error) + (Ki * integral) + (Kd * derivative)) / 100;
    int powerA = Tp + Turn;
    int powerC = Tp - Turn;
    lastError = error;
    if(powerA > 0){
        OnFwd(OUT_A, powerA);
    }
    else{
        powerA = powerA * (-1);
        OnRev(OUT_A, powerA);
    }
    if(powerC > 0){
        OnFwd(OUT_C, powerC);
    }
    else{
        powerC = powerC * (-1);
        OnRev(OUT_C, powerC);
    }
}
}
